{% if pages > 1 %}
    <nav>
        <ul>
            <li>
                {% if currentPage > 1 %}
                <a href="{{ path(path, {page: currentPage - 1}) }}">&lt;</a>
                {% else %}
                <a>&lt;</a>
                {% endif %}
                
            </li>
            {% for page in 1..pages %}
                <li>
                    <a href="{{ path(path, {page: page}) }}">{{ page }}</a>
                </li>
            {% endfor %}
            <li>
                {% if currentPage < pages %}
                <a href="{{ path(path, {page: currentPage + 1}) }}">&gt;</a>
                {% else %}
                <a>&gt;</a>
                {% endif %}
                
            </li>
        </ul>
    </nav>
    
{% endif %}